<view>-----------------------------</view>

<image wx:for="{{1}}" src="https://gimg2.baidu.com/image_search/src=http%3A%2F%2Ff.01ny.cn%2Fforum%2F201306%2F15%2F100810oz3gyydg7vignrvz.jpg&refer=http%3A%2F%2Ff.01ny.cn&app=2002&size=f9999,10000&q=a80&n=0&g=0n&fmt=jpeg?sec=1630742244&t=8d2c91d94eaafd5334f09361f1566c35" bindload="handleImageLoad" lazy-load="{{true}}"></image>

