<!-- 1. 水平滚动 scroll-x -->
<!-- view是块级元素，会独占一行 -->
<scroll-view class="container1" scroll-x>
  <view wx:for="{{10}}" class="item1" wx:key="key">{{item}}</view>
</scroll-view>

<!-- 2. 垂直滚动 scroll-y -->
<scroll-view class="container2" scroll-y>
  <view wx:for="{{10}}" wx:key="key" class="item2">{{item}}</view>
</scroll-view>

<!-- 3.其他补充 -->
<scroll-view class="container2" scroll-y bindscroll="handleScroll" bindscrolltoupper="handleToUpper" bindscrolltolower="handleToLower">
  <view wx:for="{{10}}" wx:key="key" class="item2">{{item}}</view>
</scroll-view>